<h1>User profile</h1>

<div class="row">
  <div class="col s6">
    <img class="avatar"
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcST_U6apFpDMtPNAasgj0R2Km9hTB7wEl78dnUALKHn-ILCWpdt&usqp=CAU"
      alt="user photo">
    <p>User photo</p>
  </div>
  <div class="col s6">
    <p>Your email: <strong>{{user.email}}</strong></p>
    <form action="/profile" method="POST">
      <div class="input-field">
        <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
        <label class="active" for="name">Name</label>
        <span class="helper-text" data-error="Enter your name"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <input type="hidden" name="_csrf" value={{csrf}}>

      <button type="submit" class="btn">Save changes</button>
    </form>
  </div>
</div>