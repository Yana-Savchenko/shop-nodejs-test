<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a class="active" href="#register">Sign up</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      <h3>Please, login</h3>
      <form action="/auth/login" method="POST">

        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" required>
          <label class="active" for="email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label class="active" for="password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <button class="btn btn-primary" type="submit">Login</button>

      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      <h3>Please, sign up</h3>
      <form action="/auth/register" method="POST">

        <div class="input-field">
          <input id="reg-email" name="email" type="email" class="validate" required>
          <label class="active" for="reg-email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="reg-password" name="password" type="password" class="validate" required>
          <label class="active" for="reg-password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <div class="input-field">
          <input id="confirm-password" name="confirmPassword" type="password" class="validate" required>
          <label class="active" for="confirm-password">Confirm password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <button class="btn btn-primary" type="submit">Sign up</button>

      </form>
    </div>
  </div>