<h1>Add course</h1>

{{#if courseError}}
<p class="alert">{{courseError}}</p>
{{/if}}

<form action="/add-course" method="POST">
  <div class="input-field col s6">
    <input id="title" name="title" type="text" class="validate" value="{{data.title}}" required>
    <label class="active" for="title">Course name</label>
    <span class="helper-text" data-error="Enter course name"></span>
  </div>
  <div class="input-field col s6">
    <input id="price" name="price" type="text" class="validate" value="{{data.price}}" required>
    <label class="active" for="price" min="1">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>
  <div class="input-field col s6">
    <input id="img" name="img" type="text" class="validate" value="{{data.img}}" required>
    <label class="active" for="img">Image URL</label>
    <span class="helper-text" data-error="Enter image URL"></span>
  </div>

  <input type="hidden" name="_csrf" value={{csrf}}>

  <button class="btn btn-primary" type="submit">Add course</button>
</form>